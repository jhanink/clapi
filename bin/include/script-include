if [ `basename "$PWD"` == "bin" ];
then
  INDEX='../index';
  PRINT_OUTPUT='../print_output';
  BASE_DIR=`dirname "$PWD"`;
else
  INDEX='index';
  PRINT_OUTPUT='print_output';
  BASE_DIR=`"$PWD"`;
fi


# requires bash v3+ for '=~'
if [ -z "$1" ] || [ "$1" == "--JSON" ] || [ "$1" == "--RAW" ] || [ "$1" == "--PRETTY" ] || [[ "$1" =~ ^--KEY* ]];
then
  HAS_PARAMS=0
else
  HAS_PARAMS=1
fi

if [[ "$1" =~ ^--KEY* ]];
then
  HAS_KEY=1
fi

SCRIPT_NAME=`basename "$0"`
